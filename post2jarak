import java.util.Scanner;
import java.lang.Math;
class titik {
    private int x1,x2,y1,y2;
    private double jarak;

    public void setdua_titik() { // method brp procedure
        Scanner input = new Scanner(System.in);
        System.out.println(" Menghitung jarak antara dua titik sebuah kordinat");
        System.out.println(" Masukan x1 : ");
        this.x1 = input.nextInt();
        System.out.println(" Masukan y1 : ");
        this.y1 = input.nextInt();
        System.out.println(" Masukan x2 : ");
        this.x2 = input.nextInt();
        System.out.println(" Masukan y2 : ");
        this.y2 = input.nextInt();
    }

    public double getjarak() { // method brp Fungsi
        return jarak;
    }
    public void setjarak(){
        this.jarak = Math.sqrt( Math.pow((x2-x1),2) + Math.pow((y2-y1),2) );
    }

}
class hitung{
    int x1,x2,y1,y2;
    double jarak;
    public hitung(){} //default constructor
    public hitung(int x1, int y1, int x2 , int y2 ,double jarak){ //constructor perparameter
        this.x1= x1;
        this.y1= y1;
        this.x2= x2;
        this.y2= y2;
        this.jarak= jarak;
    }
}

public class post21 {
    public static void main(String[] args) {
        Scanner input = new Scanner(System.in);
        titik t= new titik();
        t.setdua_titik();
        t.setjarak();
        t.getjarak();
        System.out.println("jaraknya adalah :"+ t.getjarak());
    }
}



